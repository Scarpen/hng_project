<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3 style="margin-left: 20px; margin-top:15px; margin-bottom: 15px;">Criar novo time GvG</h3>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
      <%= simple_form_for(@gvg_core) do |f| %>
        <%= f.error_notification %>

    <div class="form-group row">
      <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Nome</label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.input :name, input_html: { class: 'form-control' }, placeholder: "Nome", label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-12"> </div>
    </div>

    <div class="form-group row">
      <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Descrição</label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.input :description, input_html: { class: 'form-control' }, placeholder: "Descrição", label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-12"> </div>
    </div>

    <div class="form-group row">
      <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Recrutamento Aberto? </label>

      <div class="col-md-6 col-sm-6 col-xs-12" id="gvg_div">
        <%= f.input :recruiting, input_html: { class: 'flat', style:"opacity:0%, position:absolute"}, label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-12"> </div>
    </div>

    <div class="form-group row">
      <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Descrição de Recrutamento </label>

      <div class="col-md-6 col-sm-6 col-xs-12" id="gvg_div">
        <%= f.input :description, input_html: { class: 'form-control' }, placeholder: "Descrição", label: false %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-12"> </div>
    </div>


    <div class="form-group row">
      <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Imagem do Core</label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <label id="fileupload-example-4-label " for="fileupload-example-4" style="margin-top: 0px">
         <img id="imgDisplay" style="float: left; width: 276px; height: 157px; cursor: pointer; margin: 0px !important; border: 1px solid black"/>
        </label>
                <%= f.input :avatar, label: false, input_html:{class: "", style: "opacity: 0", id: 'fileupload-example-4', onchange:"imagePreview(this)" }  %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-12"> </div>
    </div>


<script>

  function imagePreview(input){
    if (input.files && input.files[0]) 
        {
          $('#imgDisplay').show();
          var filerdr = new FileReader();
          filerdr.onload = function(e) {
              $('#imgDisplay').attr('src', e.target.result);
          };
          filerdr.readAsDataURL(input.files[0]);
        }
    };

    function imageLoad(){
      $('#imgDisplay').show();
      $('#imgDisplay').attr('src', "<%= @gvg_core.avatar.url %>");
    };
    
  <% if action_name == 'edit' || @gvg_core.errors.any? %>
    imageLoad();
  <% end %>

  </script>





    <div class="ln_solid"></div>

    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
       <%= f.submit "Enviar", class: "btn btn-primary" %>
    </div>
<% end %>


        </div>
      </div>
    </div>
  </div>
</div>