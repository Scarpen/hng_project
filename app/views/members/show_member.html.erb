<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3 style="margin-left: 20px; margin-top:15px; margin-bottom: 15px;">Perfil: <%= @user.nick %> </h3>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form"> </label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
                      <%= image_tag @user.avatar.url, class: "img-circle profile_img", style: "float: left; width: 78px; height: 78px; margin: 0px !important" %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Nick</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
                  <%= @user.nick %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Cargo</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <%= @user.guild_role.name %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Char Alternativo 1</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
                  <%= @user.alt1 %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Char Alternativo 2</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
                  <%= @user.alt2 %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Time de GvG</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <% if @user.gvg_core && @user.core_status == 1%>
              <%= @user.gvg_core.name %>
              <% else %>
              Sem time de GvG
              <% end %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>
	  <% if current_user.guild_role.permition > 3 %>
          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">E-mail</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <%= @user.email %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>
	  <% end %>


          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Interesses / Como pode ajudar a guild</label>

            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;" id="gvg_div">
              <%= interess_list(@user) %>
            </div>


            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>
          
          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Conta</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <%= @user.account %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>  

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Recrutador</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <%= @user.recruiter %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

          <div class="form-group row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12 control-label-form">Hora de Atividade</label>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 8px;">
              <%= @user.activity_hour %>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12"> </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
