<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3 style="margin-left: 20px; margin-top:15px;">GvGs</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
          <% if current_user.guild_role.permition >= Permition.find(4).permition %>
            <%= link_to "Nova GvG", new_gvg_path, class: "btn btn-primary" %>
          <% end %>
        <table class="table table-hover" id="gvgs_table">
        <thead>
          <tr> 
            <th> GvG </th>
            <th> Players </th>
            <th> Inimigos </th>
            <th> Mapa </th>
            <th> Tipo de Mapa </th>
            <th> Core </th>
          </tr>
        </thead>
        <tbody>
          
        <% @gvgs.each do |gvg| %>
          <tr>
            <td> HnG <%= gvg.result_hng if gvg.result_hng%> X <%= gvg.result_other if gvg.result_other %> <%= gvg.enemy if gvg.enemy %> <%= link_to show_gvg_path(gvg.id) do %> <i class="fa fa-eye"></i> <% end %></td>
            <td> <%= gvg.players if gvg.players %></td>
            <td> <%= gvg.enemies if gvg.enemies %></td>
            <td> <%= gvg.map if gvg.map %></td>
            <td> <%= gvg.gvg_type if gvg.gvg_type %></td>
            <td> <%= gvg.gvg_core.name if gvg.gvg_core %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$('#gvgs_table').dataTable( {
  paginate: false,
  scrollY: 700
} );
</script>